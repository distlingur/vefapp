<%= form_for @message,:html=> {:class => 'form-horizontal'}, :url => contact_path do |form| %>
    <div class="container">

<form class="form-inline">
  <fieldset class="fields">

    <div class="field">
      <%= form.label :Nafn %>
      <%= form.text_field :name %>
    </div>
    
    <div class="field">
      <%= form.label :Tölvupóstur %>
      <%= form.text_field :email %>
    </div>
    <div class="field">
      <%= form.label :Titill %>
      <%= form.text_field :subject %>
    </div>
    
    <div class="field">
      <%= form.label :Innihald %>
      <%= form.text_area :body %>
    </div>
  </fieldset>
  
  <fieldset class="actions">
    <%= form.submit "Senda",:class => 'btn-primary' %>
  </div>
  </fieldset>
</form>
<% end %>
