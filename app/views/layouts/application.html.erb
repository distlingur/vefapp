    </div>
  </div>
</nav>
</header>



<body>
  
  <div id="main-container" class="container">
<div class="row">
        <div id="sidebar" class="col-xs-2">
            <br>
        <%- if params[:controller] == "base" %>
          <%= render "shared/sidebar" %>
        <%end%>
        <%- if params[:controller] == "price" %>
          <%= render "shared/sidebar2" %>
        <%end%>
        <%- if params[:controller] == "work" %>
          <%= render "shared/sidebar3" %>
        <%end%>
        <%- if params[:controller] == "backround" %>
          <%= render "shared/sidebar4" %>
        <%end%>
        <%- if params[:controller] == "handrit" %>
          <%= render "shared/sidebar" %>
        <%end%>
        <%- if params[:controller] == "auglysingar" %>
          <%= render "shared/sidebar2" %>
        <%end%>
        <%- if params[:controller] == "timarit" %>
          <%= render "shared/sidebar3" %>
        <%end%>
        <%- if params[:controller] == "contact" %>
          <%= render "shared/sidebar" %>
        <%end%>
          <!-- sidebar content -->
        </div>

        <div id="content" class="col-md-8">
          <%= yield %>

          <!--  main content -->
        </div>
      </div>
    </div>






</div>
  <%= render 'layouts/footer' %>

</body>

</html>
